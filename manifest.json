{
  "name": "Readable Wikipedia",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Enhacements to wikipedia to increase its readability.",
  "content_scripts": [
    {
      "matches": ["http://en.wikipedia.org/wiki/*"],
      "css": ["readable.css"],
      "js": ["jquery.js", "jquery.hotkeys.js", "enhancements.js"]
    }
  ],
  "icons": { 
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "tabs", "http://en.wikipedia.org/wiki/*"
  ]
}
